<Window x:Class="DesktopContactsApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="ContactDetailsWindow" Height="300" Width="300">
    <Grid Background="AliceBlue">
        <StackPanel Margin="10">
            <TextBlock Text="Name:"></TextBlock>
            <TextBox x:Name="NameTextBox" Margin="4, 0, 0, 4"></TextBox>

            <TextBlock Text="Email:"></TextBlock>
            <TextBox x:Name="EmailTextBox" Margin="4, 0, 0, 4"></TextBox>

            <TextBlock Text="Phone:"></TextBlock>
            <TextBox x:Name="PhoneTextBox" Margin="4, 0, 0, 4"></TextBox>

            <Button Content="Update" Margin="4, 0, 0, 4" Background="Goldenrod" Click="UpdateButton_OnClick"></Button>
            <Button Content="Delete" Margin="4, 0, 0, 4" Background="Tomato" Click="DeleteButton_OnClick"></Button>
            <Button Content="Cancel" Margin="4, 0, 0, 4" Click="CancelButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>
